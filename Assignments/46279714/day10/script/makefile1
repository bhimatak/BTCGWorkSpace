CC = gcc

SRC = src
INC = inc
BIN = bin
OBJ = obj

all: $(BIN)/app1

Setup:
		mkdir $(OBJ) $(BIN)

$(BIN)/app1: $(OBJ)/assign3d.o
		$(CC) -o $(BIN)/app1 $(OBJ)/assign3d.o

$(OBJ)/assign3d.o: $(SRC)/assign3d.c
			$(CC) -c $(SRC)/assign3d.c -I $(INC)/
			mv assign3d.o $(OBJ)/

clean: 		
		rm -f a.out *.o
		rm -f $(OBJ)/*
		rm -f $(BIN)/*
		@echo "Cleaning is Done!"
